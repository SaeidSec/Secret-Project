<group name="cowrie,">
  <!-- Cowrie Logon Success -->
  <rule id="100200" level="5">
    <decoded_as>json</decoded_as>
    <field name="eventid">cowrie.session.connect</field>
    <description>Cowrie: New SSH/Telnet connection from $(src_ip)</description>
  </rule>

  <rule id="100201" level="7">
    <decoded_as>json</decoded_as>
    <field name="eventid">cowrie.login.success</field>
    <description>Cowrie: Successful login by $(username) from $(src_ip)</description>
    <group>authentication_success,</group>
  </rule>

  <rule id="100202" level="9">
    <decoded_as>json</decoded_as>
    <field name="eventid">cowrie.command.success</field>
    <description>Cowrie: Command executed: $(input) from $(src_ip)</description>
  </rule>

  <rule id="100203" level="8">
    <decoded_as>json</decoded_as>
    <field name="eventid">cowrie.session.file_upload</field>
    <description>Cowrie: File upload attempt: $(filename) from $(src_ip)</description>
  </rule>
</group>
